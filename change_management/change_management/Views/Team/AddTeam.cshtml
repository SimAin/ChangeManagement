@model change_management.Models.Team

@{
    ViewData["Title"] = "Teams";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<form asp-controller="Team" asp-action="SubmitNewTeam">
    <table id="inputTable" style="width: 50%;">
        <tr>
            <th><label for="name">Team Name:</label></th>
            <td><input asp-for="@Model.name"  type="text" name="name" value="" /></td>
        </tr>
    </table>
    <button type="submit">Submit Change</button>
</form>