@model change_management.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Change managemet system";
}
@{
    Layout = "";
}

<div style="padding-top: 50px;">
    <div class="centerBox">
        <div class="centerText">
            <h2>@ViewData["Title"]</h2>

            <h3>Please login below:</h3>

            <form asp-controller="User" asp-action="userLogIn" >
                <div>
                    <label for="userId">User Id:</label>
                    <input asp-for="@Model.userId"  type="text" name="userId" value="" />
                </div>
                <br/>
                <button type="submit">Login</button>
            </form>
        </div>
    </div>
</div>

<style>
.centerBox {
  margin: auto;
  width: 30%;
  border: 3px solid grey;
  padding: 10px;
   
}
.centerText {
  text-align: center;
}
</style>