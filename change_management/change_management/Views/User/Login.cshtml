@model change_management.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Change managemet system";
}
@{
    Layout = "";
}

<div class="login-div" style="padding-top: 50px;">
    <div class="centerText">
        <h2>@ViewData["Title"]</h2>

        <h3>Please login:</h3>

        <form asp-controller="User" asp-action="userLogIn" >
            <div>
                <label for="userId">User Id:</label>
                <input asp-for="@Model.userId"  type="text" name="userId" value="" />
            </div>
            <br/>
            <button type="submit">Login</button>
        </form>
    </div>
</div>

<style>
.centerText {
  text-align: center; 
  margin: auto;
  width: 30%;
  border: 15px;
  padding: 10px;
  border-style: solid;
  border-color: rgb(44, 102, 53);
}
</style>