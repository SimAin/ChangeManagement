@model IEnumerable<change_management.Models.SystemEntity>

@{
    ViewData["Title"] = "Systems";
}
<h2>@ViewData["Title"]</h2>

<div>
    <input type="button" value="Add System" onclick="location.href='@Url.Action("AddSystem", "System")'" />
</div>
<br/>
<table id="dataTable" style="width: 100%;">
    <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Description</th>
        <th>Tech Stack</th>
        <th>Point of contact</th>
        <th>Owning Team</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.techStack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pointOfContact.forename)
                @Html.DisplayFor(modelItem => item.pointOfContact.surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.owningTeam.name)
            </td>
            <td>
                <input type="button" value="View History" onclick="location.href='@Url.Action("History", "System", new { systemID = item.systemID })'" />
            </td>
        </tr>
    }
</table>